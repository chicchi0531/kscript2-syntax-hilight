{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "kscript2",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#functions"
        },
		{
			"include": "#novels"
		},
		{
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#vars"
		}
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "comment": "一行コメントは;で始まります",
                    "name": "comment.line",
                    "match": "//.*"
                },
                {
                    "comment": "複数行コメントは{}です",
                    "name": "comment.block",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
		},
		"novels":{
			"patterns": [
				{
					"comment": "ノベル文",
					"begin": "#[ ]*novel",
					"end": "#",
					"patterns": [
						{
							"include": "#inline_var"
						},
                        {
                            "include": "#ruby"
                        },
						{
							"comment": "名前行",
							"name": "markup.heading",
							"match": "\\-.*",
							"patterns": [
								{
									"include": "#inline_var"
								}
							]
						},
                        {
							"comment": "ボイス行",
							"name": "markup.bold",
							"match": "\\+.*",
							"patterns": [
								{
									"include": "#inline_var"
								}
							]
						},
                        {
                            "comment": "命令行",
                            "match": "(@[^ ]*)(.*)",
                            "captures": {
                                "1": {
                                    "name": "entity.name.function"
                                },
                                "2": {
                                    "patterns": [
                                        {
                                            "include": "#keywords"
                                        },
                                        {
                                            "include": "#comments"
                                        },
                                        {
                                            "include": "#strings"
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "comment": "埋め込み命令",
                            "name": "markup.inline.raw",
                            "begin": "<[^pn/]*>",
                            "end": "</.*>"
                        },
						{
							"comment": "改行文字",
							"name": "keyword.other",
							"match": "」|<p>|<n>"
						},
                        {
                            "comment": "コメント",
                            "match": "//.*",
                            "name": "comment.line"
                        }
					]
				}
			]
		},
        "strings": {
            "comment": "文字列です",
            "name": "string.quoted",
            "begin": "\"",
            "end": "\""
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword",
                    "match": "\\b(var|func|type|struct|if|else|switch|case|default|fallthrough|for|break|continue|return|import|__syscall)\\b"
                },
                {
                    "name": "storage.type.numeric.go",
                    "match": "\\b(int|float|void)\\b"
                },
                {
                    "name": "storage.type.string.go",
                    "match": "\\b(string)\\b"
				},
				{
					"name":"keyword.operator",
					"match": "\\+|\\-|\\*|/|\\%|<|>|(\\!=)|=|(\\&\\&)|(\\|\\|)|(:=)"
				},
                {
                    "name":"constant.language",
                    "match": "\\b(true|false|nil)\\b"
                }
            ]
        },
        "vars": {
            "patterns": [
                {
                    "comment": "数字です",
                    "match": "%[\\-0-9]+"
                },
                {
                    "comment": "識別子です",
                    "match": "[a-zA-Z_亜-熙ぁ-んァ-ヶ][0-9a-zA-Z_亜-熙ぁ-んァ-ヶ\\[\\]]*"
                }
            ]
		},
		"inline_var":{
			"patterns": [
				{
					"comment": "組み込み変数",
					"name": "variable.parameter",
					"match": "\\%[a-zA-Z_亜-熙ぁ-んァ-ヶ][a-zA-Z_0-9亜-熙ぁ-んァ-ヶ]*\\%"
				}
			]
		},
        "ruby":{
            "patterns": [
                {
                    "comment": "ノベル中のルビ構文",
                    "name": "markup.inline.raw",
                    "match": "\\[[^\\]]*\\]"
                }
            ]
        },
        "functions":{
            "match": "([a-zA-Z_亜-熙ぁ-んァ-ヶ][0-9a-zA-Z_亜-熙ぁ-んァ-ヶ]*)[ ]*(\\(.*\\))",
            "captures": {
                "1": {
                    "name": "entity.name.function"
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#keywords"
                        },
                        {
                            "include": "#comments"
                        },
                        {
                            "include": "#strings"
                        }
                    ]
                }
            }
        }
    },
    "scopeName": "source.ks2"
}